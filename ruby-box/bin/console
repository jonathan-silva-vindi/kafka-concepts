#!/usr/bin/env ruby
# frozen_string_literal: true

require "irb"

def reload!
  files = [
    '../consumer.rb',
    '../producer.rb',
    '../lib/user_pb.rb',
    '../lib/stress_benchmarking.rb'
  ]

  files.each do |file|
    load File.expand_path(file, __dir__)
  end

  puts "Reload complete!"
end

IRB.start(__FILE__)
